{
    "env": {
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "lines-around-comment": [
          "warn",
          {
            "beforeBlockComment": true
          }
        ],
        "semi": [
          "error", "always"
        ],
        "quotes": [1, "single"],
        "eqeqeq": 1
    }
}
